<DroidChatBox>:
    anchor_y: "top"
    input_box: command_input
    output_box: display_input

    orientation: "vertical"

    ScrollView:
        id: scrlv
        do_scroll_y: True

        GridLayout:
            cols:1
            TextInput:
                id: display_input
                size_hint: 1, None
                height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
                multiline: True
                readonly: True

    GridLayout:
        cols: 2
        row_default_height: "40dp"
        row_force_default: True
        spacing: "10dp"
        padding: "10dp"
        Label:
            text: "Comm"
        TextInput:
            id: command_input

    Button:
        size_hint_y: None
        height: "40dp"
        text: "Enter"
        on_press: root.read_command()
